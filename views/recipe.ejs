<!-- recipe.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #304034;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 20px;
            background-color: #FFFFFF;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .container h1 {
            font-size: 32px;
            font-weight: bold;
            color: #2F3136;
            margin-bottom: 20px;
        }
        .container img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .container h2 {
            font-size: 24px;
            font-weight: bold;
            color: #2F3136;
            margin-bottom: 10px;
        }
        .container ul, .container ol {
            margin-left: 20px;
            margin-bottom: 20px;
        }
        .container li {
            font-size: 16px;
            color: #666666;
            margin-bottom: 8px;
        }
        .container a {
            display: block;
            color: #1E90FF;
            text-decoration: none;
            margin-top: 20px;
        }
        .container a:hover {
            text-decoration: underline;
        }
    </style>
    <title><%= recipe.title %></title>
</head>
<body>
    <div class="container">
        <h1><%= recipe.title %></h1> 
        <img src="<%= recipe.image %>" alt="<%= recipe.title %>" />
        <h2>Ingredients</h2>
        <ul>
            <% recipe.extendedIngredients.forEach(ingredient => { %>
                <li><%= ingredient.original %></li>
            <% }); %>
        </ul>
        <h2>Instructions</h2>
        <ol>
            <% recipe.analyzedInstructions[0].steps.forEach(step => { %>
                <li><%= step.step %></li>
            <% }); %>
        </ol>
        <a href="/explore"> Go Back to Home Page</a>
    </div>
</body>
</html>
